<article class="highlightslist <% if (pageID == 'home') { %>jumbotron hidden-xs<% } %>">
  <div class="container">
    <div class="row">
        <% highlights.forEach(function(item) { %>
        <div class="<% if (pageID == 'home') { %>col-sm-4 text-center<% } else { %>col-sm-8 <% } %>">
          <h3 class="highlightslist-title"><%= item.site %></h3>
          <h5 class="highlightslist-name">with <a href="/highlights/<%= item.shortname %>"><%= item.site %></a></h5>
          <div class="highlightslist-info">
            <a href="/highlights/<%= item.id %>">

              <% if (pageID == 'home') { %>
                <img class="highlightslist-img img-circle" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="300"></a>
              <% } %>

              <% if (pageID == 'highlightList') { %>
                <img class="highlightslist-img img-circle pull-left" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="300"></a>
              <% } %>
            </a>

            <% if (pageID == 'highlightDetail') { %>
              <img class="highlightslist-img img-responsive pull-left" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="600"></a>
            <% } %>
          </a>

            <% if (pageID !== 'home') { %>
              <% if (pageID == 'highlightList') { %>
                <%= item.category %>
              <% } else { %>
                <div>
                <iframe src="<%= item.videoEmbed %>"></iframe>
              </div>

<div id="map" style="width:500px; height: 300px">
<script>
              var map;
                function initMap() {
                  map = new google.maps.Map(document.getElementById('map'),{
                    zoom: 10,
                    center: {
                    lat: 40.50074437453521,
                    lng: -74.44976467246094
                  },
                    minZoom: 10,
                    maxZoom: 10,
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    draggable: true,
                    scrollwheel: false
                  });

                  var marker = new google.maps.Marker({
          position: {
            lat: 40.50074437453521,
            lng: -74.44976467246094
          },
          map: map,
        });
                }

</script>
                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyACZMXxHRiIQGouzUElNhv-Zm5aQcfhSLg&callback=initMap"
                async defer></script>

                </div>

                <%- item.info %>
                  <% } %>

            <% } %>
          </div>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>
